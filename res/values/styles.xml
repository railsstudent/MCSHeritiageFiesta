<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="TextLargeGreen" parent="@android:style/TextAppearance.Large">
         <item name="android:textColor">@color/green</item>
    </style>
    
    <style name="TextMediumSilver" parent="@android:style/TextAppearance.Medium">
         <item name="android:textColor">@color/silver</item>
    </style>
    
    <style name="TextSmallGreen" parent="@android:style/TextAppearance.Small">
         <item name="android:textColor">@color/green</item>
    </style>
    
    <style name="TextSmallSilver" parent="@android:style/TextAppearance.Small">
         <item name="android:textColor">@color/silver</item>
    </style>
    
    <style name="TextLargeBlue" parent="@android:style/TextAppearance.Large">
		<item name="android:layout_height">wrap_content</item>        
		<item name="android:textColor">@color/blue</item>        
    </style>
    
    <style name="TextLargeBlack" parent="@android:style/TextAppearance.Large">
		<item name="android:layout_height">wrap_content</item>        
		<item name="android:textColor">#000000</item>        
    </style>
     
    <style name="TextSplashShadowBlue" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/blue</item>
		<item name="android:shadowColor">#ff999999</item>
		<item name="android:shadowDx">10</item>
		<item name="android:shadowDy">5</item>
		<item name="android:shadowRadius">3</item>
		<item name="android:textSize">24sp</item>
		<item name="android:layout_marginTop">15dp</item>
    </style>
</resources>
